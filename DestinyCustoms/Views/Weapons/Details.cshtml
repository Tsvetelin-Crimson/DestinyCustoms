@model DetailsWeaponViewModel

<div class="container bg-light">
    <div class="row">
        <div class="col-lg-4 col-md-5 xs-margin-30px-bottom ">
            <div class="bg-light-gray padding-30px-all md-padding-25px-all sm-padding-20px-all text-center" style="margin-top: 10px;">
                <h4 class="margin-10px-bottom font-size24 md-font-size22 sm-font-size20 margin font-weight-600 ">@Model.Name</h4>
                <div class="team-single-img ">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="mx-auto d-block img-fluid" style="height: 100%; width: 100%; display: block; margin-top: 20px ">
                </div>
                <p class="sm-width-95 sm-margin-auto"><h4>Weapon class:</h4> @Model.ClassName</p>
            </div>
        </div>

        <div class="col-lg-8 col-md-7">
            <div class="team-single-text padding-50px-left sm-no-padding-left">
                <h4 class="font-size38 sm-font-size32 xs-font-size30" style="margin-top: 10px;">Intrinsic: @Model.IntrinsicName</h4>
                <p class="no-margin-bottom border border-primary rounded" style="margin-left: 10px">@Model.IntrinsicDescription </p>
            </div>
            <div class="team-single-text padding-50px-left sm-no-padding-left">
                <h4 class="font-size38 sm-font-size32 xs-font-size30">Catalyst:@Model.CatalystName</h4>
                <h6 class="font-size38 sm-font-size32 xs-font-size30" style="margin-left: 10px; outline-offset: 100px">How to complete Catalyst:</h6>
                <p class="no-margin-bottom border border-primary rounded" style="margin-left: 10px">@Model.CatalystCompletionRequirement </p>
                <h6 class="font-size38 sm-font-size32 xs-font-size30" style="margin-left: 10px">What the Catalyst does:</h6>
                <p class="no-margin-bottom border border-primary rounded" style="margin-left: 10px">@Model.CatalystCompletionRequirement </p>
            </div>
        </div>
    </div>
</div>