@model AllWeaponsQueryModel

@{ 
    ViewBag.Title = "All Weapons";
}
<div class="album py-5 bg-light">
    <form method="get">
        <div class="row form-group ml-2 mb-4">
            <div class="col-5">
                <label asp-for="SearchTerm">Weapon name:</label>
                <input type="text" class="form-control" asp-for="SearchTerm" />
            </div>
            <div class="col-4">
                <label asp-for="WeaponType">Weapon Class:</label>
                <select class="form-control" asp-for="WeaponType">
                    <option value="All">All</option>
                    @foreach (var weaponClass in Model.WeaponTypes)
                    {
                        <option value="@weaponClass">@weaponClass</option>
                    }
                </select>
            </div>
            <div class="col-2 text-center d-flex flex-column justify-content-end mr-1">
                <input type="submit" class="btn btn-primary" placeholder="Gjalarhorn..." value="Search">
            </div>
        </div>
</form>
    @{ 
        var previousPage = Model.CurrentPage - 1;

        previousPage = previousPage <= 0 ?
            1 :
            previousPage;

        var lastPage = (int)Math.Ceiling((double)Model.AllWeapons / Model.WeaponsPerPage);
    }

<div class="row">
    <div class="col-6">

        @if (Model.CurrentPage != 1)
        {
            <a asp-controller="Weapons"
               asp-action="All"
               asp-route-currentPage="@previousPage"
               asp-route-weaponType="@Model.WeaponType"
               asp-route-searchTerm="@Model.SearchTerm"
               class="btn btn-primary">
                    <i class="fa fa-chevron-left"></i>
            </a>
        }
    </div>
    <div class="col-6">
        @if (Model.CurrentPage != lastPage)
        {
            <a asp-controller="Weapons"
               asp-action="All"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-weaponType="@Model.WeaponType"
               asp-route-searchTerm="@Model.SearchTerm"
               class="float-right btn btn-primary">
                    <i class="fa fa-chevron-right"></i>
            </a>
        }
    </div>

</div>
    <div class="container mt-4">
        <div class="row">
            @foreach (var weapon in Model.Weapons)
            {
                <div class="col-lg-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 75%; width: 75%; display: block; align-self: center; margin-top: 20px" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22288%22%20height%3D%22225%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20288%20225%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_17a9a783e25%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_17a9a783e25%22%3E%3Crect%20width%3D%22288%22%20height%3D%22225%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2296.828125%22%20y%3D%22118.8%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                        <div class="card-body">
                            <div class="card-body">
                                <h3 class="card-title text-center">@weapon.Name</h3>
                                <h5 class="card-text text-center">@weapon.ClassName</h5>
                            </div>
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="btn-group ">
                                    <a class="btn btn-sm btn-outline-secondary " href="/Weapons/Details/@weapon.Id">View</a>
                                    <a class="btn btn-sm btn-outline-secondary ">Edit (doesn't work)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>