@model AddWeaponFormModel

<form method="post">
    <div class="row">
        <div class="form-group col-12">
            <label class="text-light" asp-for="Name"></label>
            <input type="text" class="form-control bg-dark text-light" asp-for="Name" placeholder="Lord of Wolves...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label class="text-light" asp-for="IntrinsicName"></label>
                <input type="text" class="form-control bg-dark text-light" asp-for="IntrinsicName" placeholder="Release the Wolves...">
                <span asp-validation-for="IntrinsicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="IntrinsicDescription"></label>
                <textarea class="form-control bg-dark text-light" asp-for="IntrinsicDescription" rows="8"></textarea>
                <span asp-validation-for="IntrinsicDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label class="text-light" asp-for="CatalystName"></label>
                <input type="text" class="form-control bg-dark text-light" asp-for="CatalystName" placeholder="Fang and Claw...">
                <span asp-validation-for="CatalystName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="CatalystCompletionRequirement"></label>
                <textarea class="form-control bg-dark text-light" asp-for="CatalystCompletionRequirement" rows="1"></textarea>
                <span asp-validation-for="CatalystCompletionRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="CatalystEffect"></label>
                <textarea class="form-control bg-dark text-light" asp-for="CatalystEffect" rows="5"></textarea>
                <span asp-validation-for="CatalystEffect" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-12">
            <label class="text-light" asp-for="ImageUrl"></label>
            <input type="text" class="form-control bg-dark text-light" asp-for="ImageUrl" rows="5" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group col-12">
            <label class="text-light" asp-for="ClassId"></label>
            <select class="form-control bg-dark text-light" asp-for="ClassId">
                @foreach (var weaponClass in Model.Classes)
                {
                    <option value="@weaponClass.Id">@weaponClass.Name</option>
                }
            </select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex  justify-content-center">
        <input type="submit" name="Submit" value="Submit" class="btn btn-primary mt-3 col-4 " />
    </div>

</form>