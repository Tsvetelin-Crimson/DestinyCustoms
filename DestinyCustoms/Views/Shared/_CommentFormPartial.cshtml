@model AddCommentFormModel

<div class="d-flex flex-row ml-2 mt-2 text-light"><h3>Add a comment</h3></div>
<div class="d-flex flex-row align-items-start">
    @*<img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">*@
    <div class="d-flex flex-row">
        @*<img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="50">*@
        <div class="d-flex flex-column justify-content-start ml-4">
            <span class="d-block font-weight-bold text-light">@User.Identity.Name</span>
        </div>
    </div>
</div>
<form asp-controller="Comments" asp-action="@Model.AspActionString" method="post" class="mt-5 bg-transparent">
    <div class="mt-1 ml-4 mr-4">
        <div class="d-flex flex-row align-items-start ">
            <textarea class="form-control ml-1 bg-dark text-light shadow-none textarea d-inline-block" asp-for="@Model.Content" rows="3"></textarea>
        </div>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>
    <div>
        <input type="text" asp-for="@Model.ItemId" value="@Model.ItemId" hidden />
    </div>
    <div class="mt-2 text-left">
        <button class="btn btn-primary shadow-none ml-5" type="submit">Post Comment</button>
    </div>
</form>