@model AddReplyFormModel

<form asp-controller="Comments" asp-action="@Model.AspActionReplyString" method="post" class=" ml-3 mr-4 mb-2">
    <div class="d-flex flex-row align-items-start">
        @*<img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">*@
        <span class="d-block font-weight-bold text-light">@User.Identity.Name</span>
        <br />
        <input type="text" asp-for="Content" class="form-control ml-1 shadow-none bg-dark text-light textarea" />
    </div>
    <span asp-validation-for="Content" class="text-danger"></span>

    <input type="number" asp-for="CommentId" value="@Model.CommentId" hidden />
    <input type="text" asp-for="ItemId" value="@Model.ItemId" hidden />
    <div class="d-flex flex-row justify-content-start mt-1">
        <input type="submit" class="btn btn-primary btn-sm shadow-none mr-3 ml-5" value="Reply" />
    </div>
</form>