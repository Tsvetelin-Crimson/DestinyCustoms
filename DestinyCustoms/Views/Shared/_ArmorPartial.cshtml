@model ItemServiceModel

<div class="col-xl-4 col-lg-6 bg-transparent">
    <div class="card mb-4 box-shadow bg-dark">
        <img class="card-img-top" alt="Thumbnail [100%x225]" style="height: 75%; width: 75%; display: block; align-self: center; margin-top: 20px" src="@Model.ImageUrl" data-holder-rendered="true">
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title text-center text-light">@Model.Name</h3>
                <h5 class="card-text text-center text-light">@Model.ClassName</h5>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <div class="btn-group ">
                    <a class="btn btn-sm btn-outline-secondary text-light" href="/Armors/Details/@Model.Id">View</a>
                    @if ((this.ViewBag.ShouldBeEditable != null && this.ViewBag.ShouldBeEditable == true) && 
                        (this.User.GetId() == Model.UserId || this.User.IsInRole(WebConstants.adminRoleName)))
                    {
                        <a class="btn btn-sm btn-outline-secondary text-light" href="/Armors/Edit/@Model.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger text-light" href="/Armors/Delete/@Model.Id">Delete</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>