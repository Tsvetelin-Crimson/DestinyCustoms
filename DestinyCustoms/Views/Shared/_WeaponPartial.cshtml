@model WeaponServiceModel

<div class="col-lg-3">
    <div class="card mb-4 box-shadow">
        <img class="card-img-top" alt="Thumbnail [100%x225]" style="height: 75%; width: 75%; display: block; align-self: center; margin-top: 20px" src="@Model.ImageUrl" data-holder-rendered="true">
        <div class="card-body">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <h5 class="card-text text-center">@Model.ClassName</h5>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <div class="btn-group ">
                    <a class="btn btn-sm btn-outline-secondary " href="/Weapons/Details/@Model.Id">View</a>
                </div>
            </div>
        </div>
    </div>
</div>