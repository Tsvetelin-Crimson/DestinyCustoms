@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 text-primary">Welcome</h1>
</div>


<div>
    @if (!User.Identity.IsAuthenticated)
    {
        <h5 class="text-info">Not registered? Click <a href="/Account/Register">here.</a></h5>
    }
    <h1 class="text-primary">Most Recent Weapons Added</h1>
    <div class="row">
        @foreach (var weapon in Model.Weapons)
        {
            <partial name="_WeaponPartial" model="weapon" />
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <h3 class="text-info">Want to add one yourself? <a href="/Weapons/Add">Click here.</a></h3>
    }
    <h1 class="text-primary">Most Recent Armors Added</h1>
    <div class="row">
        @foreach (var armor in Model.Armors)
        {
            <partial name="_ArmorPartial" model="armor" />
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <h3 class="text-info">Want to add one yourself? <a href="/Armors/Add">Click here.</a></h3>
    }
</div>
