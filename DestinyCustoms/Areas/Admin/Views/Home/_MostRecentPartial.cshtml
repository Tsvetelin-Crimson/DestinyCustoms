@model MostRecentItemsViewModel


<table class="table table-sm table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Model.ItemLocation.TrimEnd('s') Name</th>
            <th scope="col">Created By</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model.Items[i].Name</td>
                <td>@Model.Items[i].UserUsername</td>
                <td>
                    <a asp-area="" asp-controller="@Model.ItemLocation" asp-action="Delete" asp-route-id="@Model.Items[i].Id" class="float-right btn btn-danger">Delete</a>
                    <a asp-area="" asp-controller="@Model.ItemLocation" asp-action="Details" asp-route-id="@Model.Items[i].Id" class="float-right mr-2 btn btn-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>